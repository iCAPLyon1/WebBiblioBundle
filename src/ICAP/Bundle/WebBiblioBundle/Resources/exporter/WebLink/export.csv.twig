{% set delimiter = ';' %}
{% set tag_delimiter = ',' %}

{% autoescape false %}
{% spaceless %}

{{ enclosure }}{{ entity.id }}{{ enclosure }}{{ delimiter }}
{{ enclosure }}{{ entity.username }}{{ enclosure }}{{ delimiter }}
